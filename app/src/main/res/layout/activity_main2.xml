<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/txtTerms"
        android:layout_width="109dp"
        android:layout_height="43dp"
        android:layout_marginBottom="36dp"
        android:text="Terms:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtSources"
        app:layout_constraintEnd_toEndOf="@+id/txtSources"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtSources"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtSources"
        android:layout_width="129dp"
        android:layout_height="39dp"
        android:layout_marginBottom="36dp"
        android:text="Sources:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtMoney"
        app:layout_constraintEnd_toEndOf="@+id/txtMoney"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtMoney" />

    <TextView
        android:id="@+id/txtMoney"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginBottom="72dp"
        android:text="Money:"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnAPI"
        tools:layout_editor_absoluteX="45dp" />

    <Button
        android:id="@+id/btnAPI"
        android:layout_width="156dp"
        android:layout_height="85dp"
        android:layout_marginBottom="184dp"
        android:text="Call API"
        android:textSize="20sp"
        app:backgroundTint="#E66E6E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="162dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:text="CALL API"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>